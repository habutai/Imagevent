<h1>Upload an Image!</h1>
<%= form_tag ({:action => :upload}, :multipart =>true) do%> <!-- added as part of Friday-->
<%=file_field_tag 'upload'%> <!-- added as part of Friday...from http://guides.rubyonrails.org/form_helpers.html#uploading-files -->
<%= form_for(@image do |f| %> 
				
  <div class="field">
    <%= f.label :name, 'Title'-%><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :upload, 'File' -%><br/>
    <%= f.file_field :upload -%>
  </div>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
	<%= f.submit( 'Upload' ) %>
  </div>
 
<% end %>